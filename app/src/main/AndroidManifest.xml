<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nsa.com.museum">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        android:windowSoftInputMode="stateHidden">
        <activity
            android:name=".MainActivity"
            android:actionViewClass="android.support.v7.widget.SearchView"
            android:label="MyMuseum App"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HistoryActivity"
            android:label="@string/historyLabel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BeaconActivity"
            android:label="@string/beaconsLabel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewSettingsActivity"
            android:label="@string/title_activity_new_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nsa.com.museum.MainActivity" />
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="Your Location"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AdminLogin"
            android:label="@string/title_activity_admin_login" />
        <activity
            android:name=".AdminActivity"
            android:label="@string/AdminActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Connection"
            android:label="@string/connection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MessageCenterActivity"
            android:label="@string/messages"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QuestionActivity"
            android:label="@string/messages"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>